        "    else:\n",
        "        thapHaNoi(n-1, ToaMot, ToaBa, ToaHai)\n",
        "        print(\"Chuyen tu\", ToaMot, \"sang\", ToaBa)\n",
        "        thapHaNoi(n-1, ToaHai, ToaMot, ToaBa)\n",
        "\n",
